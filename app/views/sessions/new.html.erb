<h1>로그인</h1>

<%= form_with url: login_path, method: :post do |f| %>
  <div style="display: grid; gap: 10px; max-width: 360px;">
    <div>
      <%= label_tag :email, "이메일" %><br>
      <%= email_field_tag :email, params[:email], required: true, autocomplete: "email", style: "width: 100%;" %>
    </div>

    <div>
      <%= label_tag :password, "비밀번호" %><br>
      <%= password_field_tag :password, nil, required: true, autocomplete: "current-password", style: "width: 100%;" %>
    </div>

    <div style="display:flex; gap: 10px; align-items:center;">
      <%= f.submit "로그인" %>
      <%= link_to "회원가입", new_user_path %>
    </div>
  </div>
<% end %>
